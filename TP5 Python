entradas=input("Introduzca la cantidad de numeros para comprobar(entradas)")
x=0
while x!=entradas:
    numero= input("Elige un número de cuatro dígitos que tenga al menos dos diferentes (es válido colocar el dígito 0 al principio, por lo que el número 0009 es válido)")
    if numero==6174:
        print("numero de iteracion: 0")
        break
    num=int(numero)
    listaminmax=sorted(numero)
    numR=0
    print("el numero ingresado es: ",numero)
    print("La constante de Kaprekar")
    for x in range(99):
        
        numero="{:04d}".format(num)
        numeroMayor="".join(sorted(numero,reverse=True))
        numeroMenor="".join(sorted(numero))
        num=int(numeroMayor)-int(numeroMenor)
        
        #print(numeroMayor,"-",numeroMenor,"= ",num)
        #print("-----------------------------------")
        if num==numR:
            print("numero de iteracion: "+"{:02}".format(x+1))     
            break
        numR=num
    x=x+1
                         
